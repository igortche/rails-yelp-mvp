


<div class="container d-flex flex-column align-items-center">
<h1>Restaurant details</h1>

  <div class="col-12 col-sm-6 col-md-3 mb-3 d-flex flex-column gap-4 w-100 p-3">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title"><%= @restaurant.name %></h5>
        <p class="card-text"><%= @restaurant.address %></p>
        <p class="card-text"><%= @restaurant.phone_number %></p>
        <p class="card-text"><%= @restaurant.category %></p>
      </div>
      <div class="reviews-section p-3">
        <h3>Reviews</h3>
        <div class="d-flex flex-column gap-3">
          <% @restaurant.reviews.each do |review| %>
            <div class="card">
              <div class="card-body">
                <p class="card-text"><strong>Rating:</strong> <%= review.rate %>/5</p>
                <p class="card-text"><strong>Comment:</strong> <%= review.content %></p>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
  <div class="card-footer bg-transparent border-0 d-flex flex-wrap gap-2">
    <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: 'btn btn-primary text-white mb-2' %>
    <%= link_to 'Delete', restaurant_path(@restaurant), class: 'btn btn-danger text-white mb-2', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
    <%= link_to 'Back to List', restaurants_path, class: 'btn btn-secondary text-white mb-2' %>
    <%= link_to 'Add Review', new_restaurant_review_path(@restaurant), class: 'btn btn-success text-white mb-2' %>
  </div>
</div>
