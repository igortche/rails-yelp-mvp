<div class="container">
  <div class="row g-3">
    <h1 class="text-center">Restaurant List</h1>

    <%= link_to 'Add New Restaurant', new_restaurant_path, class: 'btn btn-success text-white mb-3 w-100'%>

    <% @restaurants.each do |restaurant| %>
      <div class="col-12 col-sm-6 col-md-3">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <p class="card-text"><%= restaurant.address %></p>
            <p class="card-text"><%= restaurant.phone_number %></p>
            <p class="card-text"><%= restaurant.category %></p>
          </div>
          <div class="card-footer bg-transparent border-0 d-flex flex-wrap gap-2">
            <%= link_to 'View', restaurant_path(restaurant), class: 'btn btn-primary text-white mb-2' %>
            <%= link_to 'Edit', edit_restaurant_path(restaurant), class: 'btn btn-secondary text-white mb-2' %>
            <%= link_to 'Delete', restaurant_path(restaurant), class: 'btn btn-danger text-white mb-2', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
